{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
        {
            "id": "NUGET_API_KEY",
            "description": "NUGET_API_KEY?",
            "type": "promptString",
            "default": "xxx",
            "password": true
        },
        {
            "id": "MODULE_VERSION",
            "description": "MODULE_VERSION?",
            "type": "promptString",
            "default": "0.0.0"
        },
        {
            "id": "Repository",
            "description": "Repository?",
            "type": "promptString",
            "default": "PSGallery"
        },
        {
            "id": "DryRun",
            "description": "DryRun?",
            "type": "pickString",
            "options": [
                "true",
                "false",
            ],
            "default": "true"
        },
    ],
    "tasks": [
        {
            "label": "Build module (pwsh)",
            "type": "shell",
            "command": "MODULE_VERSION='${input:MODULE_VERSION}' pwsh -NoLogo -NonInteractive -NoProfile -Command 'Import-Module \"./src/${workspaceFolderBasename}/${workspaceFolderBasename}.psm1\" -Force; Invoke-Build'",
            "group": "build"
        },
        {
            "label": "Build module (powershell)",
            "type": "shell",
            "command": "MODULE_VERSION='${input:MODULE_VERSION}' powershell -NoLogo -NonInteractive -NoProfile -Command 'Import-Module \"./src/${workspaceFolderBasename}/${workspaceFolderBasename}.psm1\" -Force; Invoke-Build'",
            "group": "build"
        },
        {
            "label": "Test module with separate module (pwsh)",
            "type": "shell",
            "command": "pwsh -NoLogo -NonInteractive -NoProfile -Command './test/test.ps1'",
            "group": "build"
        },
        {
            "label": "Test module with separate module (powershell)",
            "type": "shell",
            "command": "powershell -NoLogo -NonInteractive -NoProfile -Command './test/test.ps1'",
            "group": "build"
        },
        {
            "label": "Publish module (pwsh)",
            "type": "shell",
            "command": "NUGET_API_KEY='${input:NUGET_API_KEY}' MODULE_VERSION='${input:MODULE_VERSION}' pwsh -NoLogo -NonInteractive -NoProfile -Command 'Import-Module \"./src/${workspaceFolderBasename}/${workspaceFolderBasename}.psm1\" -Force; Invoke-Publish -Repository \"${input:Repository}\" -DryRun:$([System.Convert]::ToBoolean(\"${input:DryRun}\"))'",
            "group": "build"
        },
        {
            "label": "Publish module (powershell)",
            "type": "shell",
            "command": "NUGET_API_KEY='${input:NUGET_API_KEY}' MODULE_VERSION='${input:MODULE_VERSION}' powershell -NoLogo -NonInteractive -NoProfile -Command 'Import-Module \"./src/${workspaceFolderBasename}/${workspaceFolderBasename}.psm1\" -Force; Invoke-Publish -Repository \"${input:Repository}\" -DryRun:$([System.Convert]::ToBoolean(\"${input:DryRun}\"))'",
            "group": "build"
        },
    ]
}
